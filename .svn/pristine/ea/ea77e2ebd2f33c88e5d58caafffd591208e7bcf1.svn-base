import java.util.List;
import java.util.Map;

public interface TodoListService {
	
	/**
	 * @Description: 获取当前用户的待办事项总数 
	 * @param userId
	 * @return Long
	 * @author zhouxy
	 */
	public Long getTodoCount(String userId);
	
